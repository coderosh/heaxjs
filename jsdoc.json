{
  "source": {
    "include": ["src", "README.md"],
    "includePattern": ".js$",
    "excludePattern": "(node_modules/|docs)"
  },
  "opts": {
    "destination": "docs",
    "template": "node_modules/clean-jsdoc-theme/",
    "theme_opts": {
      "create_style": "pre, code{font-family: monospace!important}",
      "theme": "light",
      "title": "Heax Js",
      "static_dir": ["examples", "dist"],
      "meta": [
        {
          "name": "author",
          "content": "Roshan Acharya"
        },
        {
          "name": "description",
          "content": "Verlet physics engine"
        }
      ],
      "menu": [
        {
          "title": "Github",
          "link": "https://github.com/coderosh/heaxjs/",
          "target": "_blank"
        },
        {
          "title": "Examples",
          "link": "https://coderosh.github.io/heaxjs/examples",
          "target": "_blank"
        }
      ]
    }
  }
}
